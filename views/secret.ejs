<%- include('partials/header') %>

<div class="secret-page">
  <div class="secret-container">
    <div class="icon-key">&#128273;</div>
    <h1 class="page-title">You've Discovered Secrets!</h1>

    <% if (secrets.length > 0) { %>
      <ul class="secrets-list">
        <% secrets.forEach(function(secret) { %>
          <li class="secret-item"><%= secret %></li>
        <% }); %>
      </ul>
    <% } else { %>
      <p class="no-secrets-msg">No secrets yet. Be the first to share one!</p>
    <% } %>

    <form class="secret-form" action="/submit" method="POST">
      <input type="text" name="secret" placeholder="What's your secret?" required>
      <button type="submit">Submit Secret</button>
    </form>

    <a class="logout-link" href="/logout">Log Out</a>
  </div>
</div>

<%- include('partials/footer') %>
